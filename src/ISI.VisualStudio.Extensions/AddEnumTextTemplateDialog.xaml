<platformUi:DialogWindow x:Class="ISI.VisualStudio.Extensions.AddEnumTextTemplateDialog"
											 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
											 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
											 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
											 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
											 xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
											 xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
											 xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
											 xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
											 xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
											 xmlns:platformUi="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
											 toolkit:Themes.UseVsTheme="True"
											 mc:Ignorable="d"
											 WindowStartupLocation="CenterScreen"
											 Width="504" Height="316">
	<StackPanel Margin="10">
		<Grid Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="140" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition Height="30" />
				<RowDefinition Height="30" />
				<RowDefinition Height="30" />
				<RowDefinition Height="30" />
				<RowDefinition Height="30" />
				<RowDefinition Height="30" />
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="5">Enum Name:</TextBlock>
			<Border Grid.Row="0" Grid.Column="1" BorderBrush="Silver" BorderThickness="1" >
				<TextBox Name="txtEnumName" Width="330" />
			</Border>

			<TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="5">Namespace:</TextBlock>
			<Border Grid.Row="1" Grid.Column="1" BorderBrush="Silver" BorderThickness="1" >
				<TextBox Name="txtNamespace" Width="330" />
			</Border>

			<TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="5">ConnectionString:</TextBlock>
			<Border Grid.Row="2" Grid.Column="1" BorderBrush="Silver" BorderThickness="1" >
				<TextBox Name="txtConnectionString" Width="330" />
			</Border>

			<TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Margin="5">Enum Table Name:</TextBlock>
			<Border Grid.Row="3" Grid.Column="1" BorderBrush="Silver" BorderThickness="1" >
				<TextBox Name="txtEnumTableName" Width="330" />
			</Border>

			<TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Margin="5">EnumId Column Name:</TextBlock>
			<Border Grid.Row="4" Grid.Column="1" BorderBrush="Silver" BorderThickness="1" >
				<TextBox Name="txtEnumIdColumnName" Width="330" />
			</Border>

			<TextBlock Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Margin="5">EnumUuid Column Name:</TextBlock>
			<Border Grid.Row="5" Grid.Column="1" BorderBrush="Silver" BorderThickness="1" >
				<TextBox Name="txtEnumUuidColumnName" Width="330" />
			</Border>

			<TextBlock Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" Margin="5">Aliases Delimiter:</TextBlock>
			<Border Grid.Row="6" Grid.Column="1" BorderBrush="Silver" BorderThickness="1" >
				<TextBox Name="txtAliasesDelimiter" Width="330" />
			</Border>
		</Grid>


		<WrapPanel Margin="0,5,0,0" HorizontalAlignment="Right">
			<Button IsDefault="True" x:Name="btnOk" Click="btnOk_Click" Width="79" Height="25" Margin="3, 3, 3, 3" Content="_Ok"/>
			<Button IsCancel="True"  Width="79" Height="25" Margin="3, 3, 3, 3" Content="_Cancel"/>
		</WrapPanel>
	</StackPanel>
</platformUi:DialogWindow>
